    margin: 0;
}
  
  /* The dropdown menu itself (hidden by default) */
.dropdown-content {
    display: none;
    position: absolute;
    top: 100%; /* Pushes the dropdown exactly below the button */
    left: 0;
    background-color: #f9f9f9;
